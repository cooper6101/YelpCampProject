<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<h1 class="display-4"><i class="fas fa-campground"></i>Welcome to YelpCamp</h1>
		<p>View our hand-picked camp sites from all over the world</p>
		<p>
			<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
		</p>
	</header>

	<div>
		<div class="row d-flex justify-content-center">
			<% campgrounds.forEach(function(campground) { %>
				<div class="d-flex justify-content-center col-8 col-md-6 col-lg-4 col-xl-3 pb-3">
					<div class="card">
						<img src="<%= campground.image %>">
						<div class="card-body text-center">
							<h5><%= campground.name %></h5>	
							<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">
								Visit Campground
							</a>
							<h6 class="mt-2">$<%= campground.price %>/night</h6>
						</div>
					</div>
				</div>
			<% }); %>
		</div>
	</div>
</div>



<% include ../partials/footer %>